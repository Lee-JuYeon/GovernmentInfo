<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/luxury_blueBackground"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/container">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/logo"
            android:src="@mipmap/app_logo_round"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:contentDescription="@string/imageLoading"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/container"
        android:layout_above="@id/banner"
        android:id="@+id/framelayout"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/banner"
        android:text=" @{ String.valueOf(vm.value) } "
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_semicondensed_extrabold"
        android:gravity="center"/>
</RelativeLayout>