<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="bankModel"
            type="com.universeindustry.governmentinfo.online.retrofit.model.BankDespositModelTree" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_all_radius"
        android:id="@+id/background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/title"
            android:text="@{bankModel.itemTItle}"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:fontFamily="@font/notosans_semicondensed_extrabold"
            android:gravity="center">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/type"
                android:text="@{bankModel.type}"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/notosans_semicondensed_semibold">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/saving"
                android:text="@{bankModel.saving}"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/notosans_semicondensed_semibold">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/vip"
                android:text="@{bankModel.vip}"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/notosans_semicondensed_semibold">
            </TextView>
        </LinearLayout>
    </RelativeLayout>
</layout>
