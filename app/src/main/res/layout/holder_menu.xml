<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="menuAdapter"
            type="com.universeindustry.governmentinfo.views.fragments.menu.recyclerview.MenuAdapter" />
        <variable
            name="menuModel"
            type="com.universeindustry.governmentinfo.views.fragments.menu.recyclerview.MenuModel" />
    </data>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/cardview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_all_radius"
            android:orientation="vertical"
            android:weightSum="10">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:id="@+id/image"
                android:src="@{menuModel.image}"
                android:scaleType="centerInside"
                android:contentDescription="@string/imageLoading">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:id="@+id/text"
                android:text="@{menuModel.title}"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:gravity="center">
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
