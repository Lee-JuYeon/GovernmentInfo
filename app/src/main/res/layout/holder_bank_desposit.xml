<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="bankModel"
            type="com.universeindustry.governmentinfo.online.retrofit.model.BankDespositModelTree" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_all_radius"
        android:padding="5dp"
        android:id="@+id/background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/title"
            android:text="@{bankModel.fin_prdt_nm}"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textColor="@color/luxury_bluePointDeep"
            android:fontFamily="@font/kotra_bold"
            android:gravity="center">
        </TextView>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/title"
           android:id="@+id/detail"
           android:text="@{String.valueOf(bankModel.optionListItem)}"
           android:textAllCaps="false"
           android:textSize="15sp"
           android:textColor="@color/colorWhite"
           android:fontFamily="@font/kotra_bold"
           android:gravity="center"/>
    </RelativeLayout>
</layout>
