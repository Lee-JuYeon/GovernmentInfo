<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="bankModel"
            type="com.universeindustry.governmentinfo.online.retrofit.model.BankDespositModelTree" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_all_radius"
        android:id="@+id/background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/title"
            android:text="@{bankModel.fin_prdt_nm}"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:fontFamily="@font/notosans_semicondensed_extrabold"
            android:gravity="center">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:gravity="center"
            android:id="@+id/detail"
            android:text="@{bankModel.optionListItem.toString()}"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/notosans_semicondensed_semibold">
        </TextView>
    </RelativeLayout>
</layout>
